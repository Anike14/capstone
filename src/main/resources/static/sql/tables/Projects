CREATE TABLE Projects (
    PID UNIQUEIDENTIFIER NOT NULL DEFAULT (NEWID()),
    POWNER UNIQUEIDENTIFIER NOT NULL,
    PName VARCHAR(255) NOT NULL,
    StartedDate DATE NOT NULL,
    ExpectedDueDate DATE NOT NULL,
    LastProgressDate DATE NOT NULL DEFAULT(CURRENT_TIMESTAMP),
    Difficulty INT NOT NULL,
    STATUS INT NOT NULL DEFAULT(0),
    Progress FLOAT NOT NULL DEFAULT(0),
    LastUpdateDate DATE default GETDATE(),
    PRIMARY KEY (PID),
    FOREIGN KEY (POWNER) REFERENCES USERS(UID)
);