CREATE TABLE Tasks (
    TID UNIQUEIDENTIFIER NOT NULL DEFAULT (NEWID()),
    TOwner UNIQUEIDENTIFIER,
    TName VARCHAR(255) NOT NULL,
    StartedDate DATE NOT NULL,
    ExpectedDueDate DATE NOT NULL,
    LastProgressDate DATE NOT NULL DEFAULT(CURRENT_TIMESTAMP),
    Difficulty INT NOT NULL,
    STATUS INT NOT NULL,
    PRIMARY KEY (TID),
    FOREIGN KEY (TOwner) REFERENCES Projects(PID),
    FOREIGN KEY (TOwner) REFERENCES Tasks(TID)
);